<MainPage>:
    name: 'main_page'

    BoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: 'MainPage'
            elevation: 8
            specific_text_color: app.theme_cls.primary_light

        ScrollView:


        MDBottomAppBar:
            MDToolbar:
                left_action_items: [['home-outline', lambda x: root.test()], ['tune',root.test()]]
                right_action_items: [['account-outline', lambda x: root.test()], ['chat-outline', root.test()]]
                mod: 'center'
                type: 'bottom'
                icon: 'plus'
                specific_text_color: app.theme_cls.primary_light
                on_action_button: root.test()


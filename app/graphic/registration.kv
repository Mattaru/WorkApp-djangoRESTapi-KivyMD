<Registration>:
    name: 'registration'

    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: 'Регистрация:'
            elevation: 8
            specific_text_color: app.theme_cls.primary_light

        ScrollView:
            MDGridLayout:
                cols: 1
                rows: 9
                padding: '20dp', '0dp', '20dp', '0dp'
                size_hint: 1, None
                spacing: '10dp'
                height: '400dp'

                MDTextField:
                    hint_text: 'имя пользователя'
                    helper_text: 'введите имя пользователя'
                    helper_text_mode: 'on_focus'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    icon_right: 'lead-pencil'
                    icon_right_color: app.theme_cls.primary_color
                    on_text: root.form_data['username'] = self.text

                MDTextField:
                    hint_text: 'пароль'
                    helper_text: 'введите пароль'
                    password: True
                    helper_text_mode: 'on_focus'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    icon_right: 'eye-off'
                    icon_right_color: app.theme_cls.primary_color
                    on_text: root.form_data['password'] = self.text

                MDTextField:
                    hint_text: 'пароль повторно'
                    helper_text: 'введите пароль повторно'
                    password: True
                    helper_text_mode: 'on_focus'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    icon_right: 'eye-off'
                    icon_right_color: app.theme_cls.primary_color
                    on_text: root.form_data['re_password'] = self.text

                MDTextField:
                    hint_text: 'почта'
                    helper_text: 'введите почту'
                    helper_text_mode: 'on_focus'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    icon_right: 'at'
                    icon_right_color: app.theme_cls.primary_color
                    on_text: root.form_data['email'] = self.text

                MDLabel:
                    text: 'Тип предоставляемых услуг:'
                    size_hint: .3, .25
                    halign: 'left'
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, .4

                MDBoxLayout:
                    id: categorys
                    orientation: 'vertical'

                    MDIconButton:
                        icon: "plus-circle"
                        user_font_size: "30sp"
                        on_release: root.show_dialog()

        MDBottomAppBar:
            MDToolbar:
                left_action_items: [['arrow-left', lambda x: root.go_back()]]
                mod: 'center'
                type: 'bottom'
                icon: 'location-enter'
                specific_text_color: app.theme_cls.primary_light
                on_action_button: root.validate_data()


<ChooseCategoriesContent>:
    on_release: 
        root.active_switch(check)
        root.get_cat_data(self, check)

    MDCheckbox:
        id: check
        size_hint: None, None
        size: "16dp", "16dp"
        pos_hint: {'center_x': .05, 'center_y': .5}   
